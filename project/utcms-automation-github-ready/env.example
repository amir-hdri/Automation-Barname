# Runtime
HEADLESS=false
LOG_LEVEL=INFO
DATABASE_URL=sqlite+aiosqlite:///./bot_stats.db

# UTCMS endpoints
BASE_URL=https://barname.utcms.ir
LOGIN_URL=https://barname.utcms.ir/Login
WAYBILL_URL=https://barname.utcms.ir/Barname/Waybill/Create

# Credentials
UTCMS_USERNAME=
UTCMS_PASSWORD=

# Captcha
UTCMS_CAPTCHA_VALUE=
UTCMS_ENABLE_MANUAL_CAPTCHA=true
UTCMS_MANUAL_CAPTCHA_TIMEOUT_SECONDS=120
UTCMS_MANUAL_CAPTCHA_POLL_SECONDS=0.7
# provider_first | manual_only | provider_only
CAPTCHA_MODE=provider_first
CAPTCHA_PROVIDER=twocaptcha
TWOCAPTCHA_API_KEY=
CAPTCHA_TIMEOUT_SECONDS=120
CAPTCHA_POLL_SECONDS=5
CAPTCHA_MAX_RETRIES=2

# Auth state reuse
USE_PERSISTENT_AUTH_STATE=true
AUTH_STATE_PATH=.auth/utcms_state.json

# Sensitive endpoints security
API_AUTH_MODE=api_key_or_jwt
API_KEY_HEADER=X-API-Key
API_KEY=
JWT_SECRET=
JWT_ALGORITHM=HS256
JWT_AUDIENCE=
JWT_ISSUER=
JWT_LEEWAY_SECONDS=10

# Waybill execution mode
ALLOW_LIVE_SUBMIT=false

# Traffic control
WAYBILL_MAX_CONCURRENT=2
WAYBILL_MIN_GAP_SECONDS=0.8
WAYBILL_JITTER_SECONDS=0.4
WAYBILL_BLOCK_BACKOFF_SECONDS=15
WAYBILL_BLOCK_BACKOFF_MAX_SECONDS=180
WAYBILL_MAX_RETRIES=1
WAYBILL_RETRY_BASE_SECONDS=1.0
WAYBILL_RETRY_JITTER_SECONDS=0.5
PAGE_GOTO_MAX_RETRIES=2
PAGE_GOTO_RETRY_BASE_SECONDS=1.0
PAGE_GOTO_RETRY_JITTER_SECONDS=0.4

# Operational metrics
LATENCY_SAMPLE_MAX=2000
